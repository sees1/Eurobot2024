<launch>
  <arg name="image_view" default="false" />

  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" respawn="true" >
      <rosparam command="load" file="$(find aruco_robot)/config/camera_driver_settings.yaml"/>
      <param name="camera_info_url" value="file://$(find aruco_robot)/config/camera_info.yaml"/>
  </node>
</launch>